{
	"name": "koota",
	"version": "0.0.3",
	"description": "ðŸŒŽ Performant data-oriented state management for React and TypeScript.",
	"license": "ISC",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./react": {
			"types": "./dist/react.d.ts",
			"import": "./dist/react.js",
			"require": "./dist/react.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup src/index.ts src/react.ts --format esm,cjs --dts --dts-resolve && tsx scripts/copy-readme.ts",
		"test": "vitest --environment=jsdom"
	},
	"devDependencies": {
		"@koota/core": "workspace:*",
		"@koota/react": "workspace:*",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@types/three": "^0.162.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsconfig": "workspace:*",
		"tsup": "^8.3.0"
	},
	"peerDependencies": {
		"@react-three/fiber": "^8.17.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"three": ">=0.159"
	},
	"peerDependenciesMeta": {
		"@react-three/fiber": {
			"optional": true
		},
		"three": {
			"optional": true
		},
		"react-dom": {
			"optional": true
		}
	}
